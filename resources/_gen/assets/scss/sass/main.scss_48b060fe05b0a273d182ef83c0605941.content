body{font-size:16px;margin:0;font-family:arimo,sans-serif;background:#f0f8fd}header .wrapper{background:#005e95;padding-top:1em;padding-bottom:1em;padding-right:10vw;color:#fff;display:flex;align-items:center}header .wrapper .site-tittle{font-size:2em}nav{box-shadow:0 3px 6px 0 rgba(0,0,0,.16);position:relative}nav .wrapper{display:flex;justify-content:center;padding-top:1em}nav .wrapper ul li{display:inline-block;color:#005e95;font-weight:700;font-size:1.5em;padding-right:1.5em;padding-left:1.5em}section{padding-right:10vw;padding-top:3.5em;color:#005e95;background-repeat:no-repeat;min-height:45vh;background-size:contain}section.money .text{width:fit-content;margin-top:5vh}section.money .text h2{font-size:4em;margin-block-start:0;margin-block-end:0;margin-inline-start:0;margin-inline-end:0}section.money .text p{font-size:2em;margin:0;padding:0}